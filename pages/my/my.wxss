.container {
  justify-content: space-between;
  background: #F0F0F2;
  font-size: 30rpx;
}

.userinfo {
  display: flex;
  align-items: center;
  width: 100%;
  height: 150rpx;
  background: #fff;
  padding: 0 30rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.userinfo-avatar {
  flex: 5;
  display: flex;
  justify-content: flex-end;
}

.userinfo-avatar image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  flex: 5;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #101010;
}

.userinfo-list {
  background: #fff;
  margin-top: 20rpx;
  padding: 0 30rpx;
}

.userinfo-li {
  display: flex;
  height: 100rpx;
  align-items: center;
}

.userinfo-li view {
  flex: 5;
}

.userinfo-li view:nth-of-type(2) {
  align-items: flex-end;
  text-align: right;
}

.hr {
  border-top: 2rpx solid #F0F0F2;
}

.arrow {
  width: 20rpx;
  height: 20rpx;
  border-top: 2rpx solid #666;
  border-right: 2rpx solid #666;
  transform: rotate(45deg);
  float: right;
}

.button {
  width: 100%;
  height: 100rpx;
  background: #fff;
  border: none;
}