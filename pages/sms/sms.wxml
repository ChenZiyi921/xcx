<!--pages/sms/sms.wxml-->
<view class="box">    
  <text>请输入您的手机号码</text>
  <input class="input" type="number" bindblur="getPhone"></input>
  <text>请输入验证码</text>
  <input class="input" type="text" bindblur="getSms"></input>
  <text>状态:{{result}}</text>
  <button type="primary" bindtap="send">点击发送</button>
  <button type="primary" bindtap="check">点击验证</button>
</view>